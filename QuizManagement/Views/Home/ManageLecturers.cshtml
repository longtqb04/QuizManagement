@{
    Layout = "~/Views/Shared/_MainPageAdmin.cshtml";
}

<div class="hello">
    <br />
    <h1 style="text-align:center;">Quản lý giảng viên</h1>
    <br />
</div>

<div class="buttons">
    <button id="create" style="background-color: forestgreen;">Thêm giảng viên</button>
    <button id="edit">Chỉnh sửa thông tin</button>
    <button id="delete" style="background-color: darkred;color:white">Xóa giảng viên</button>
    <button id="start" style="background-color: black;color:white;">Tìm kiếm</button>
    <button style="background-color: deepskyblue;" onclick="location.href='@Url.Action("MainPageAdmin", "Home")'">Trở về trang chủ</button>
</div>

<div class="search">
    <br />
    <form asp-action="SearchLecturers" method="get">
        <input type="text" name="searchQuery" placeholder="Tìm kiếm theo tên" />
        <button type="submit">Tìm kiếm</button>
    </form>
    <br />
</div>

@model IEnumerable<QuizManagement.Models.Lecturer>
<table>
    <tr>
        <th>Citizen ID</th>
        <th>Name</th>
        <th>Date of Birth</th>
        <th>Gender</th>
        <th>Address</th>
        <th>Email</th>
        <th>Faculty</th>
    </tr>
    @foreach (var lecturer in Model ?? new List<QuizManagement.Models.Lecturer>())
    {
        <tr>
            <td>@lecturer.Id</td>
            <td>@lecturer.Name</td>
            <td>@lecturer.DOB.ToString("dd-MM-yyyy")</td>
            <td>@lecturer.Gender</td>
            <td>@lecturer.Address</td>
            <td>@lecturer.Email</td>
            <td>@lecturer.Faculty</td>
        </tr>
    }
</table>

<div class="overlay">
    <div class="add">
        <form asp-action="CreateLecturer" asp-controller="Database" method="post">
            <label style="width: 500px; height: 24px;" for="Id">Số CCCD</label>
            <br />
            <input type="text" name="Id" required />
            <br />
            <label style="width: 500px; height: 24px;" for="Name">Họ và tên</label>
            <br />
            <input type="text" name="Name" required />
            <br />
            <label style="width: 500px; height: 24px;" for="DOB">Ngày sinh</label>
            <br />
            <input type="date" name="DOB" required />
            <br />
            <label style="width: 500px; height: 24px;" for="Gender">Giới tính</label>
            <br />
            <select name="Gender" id="gender" required>
                <option value="" disabled selected>Chọn giới tính</option>
                <option value="M">M</option>
                <option value="F">F</option>
            </select>
            <br />
            <label style="width: 500px; height: 24px;" for="Address">Địa chỉ</label>
            <br />
            <input type="text" name="Address" required />
            <br />
            <label style="width: 500px; height: 24px;" for="Email">Email</label>
            <br />
            <input type="email" name="Email" required />
            <br />
            <label style="width: 500px; height: 24px;" for="Phone">Số điện thoại</label>
            <br />
            <input type="tel" name="Phone" required />
            <br />
            <label style="width: 500px; height: 24px;" for="Faculty">Khoa</label>
            <br />
            <input type="text" name="Faculty" required />
            <br />
            <button type="submit" style="background-color:deepskyblue;position:fixed;">Thêm</button>
        </form>
        <button id="back">Trở về</button>
    </div>
</div>

