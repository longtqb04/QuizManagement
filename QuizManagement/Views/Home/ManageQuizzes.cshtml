@{
    Layout = "~/Views/Shared/_MainPageLecturer.cshtml";
}

<div class="hello">
    <br />
    <h1 style="text-align:center;">Quản lý đề thi</h1>
    <br />
</div>

<div class="buttons">
    <button id="create" style="background-color: forestgreen;">Thêm đề thi</button>
    <button style="background-color: deepskyblue;" onclick="location.href='@Url.Action("MainPageLecturer", "Home")'">Trở về trang chủ</button>
</div>

@model IEnumerable<QuizManagement.Models.Quizzes>
<table>
    <tr>
        <th>Quiz ID</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Time Limit</th>
        <th>Questions</th>
    </tr>
    @foreach (var quizzes in Model)
    {
        <tr>
            <td>@quizzes.Id</td>
            <td>@quizzes.StartTime</td>
            <td>@quizzes.EndTime</td>
            <td>@quizzes.TimeLimit</td>
            <td>@quizzes.Questions</td>
        </tr>
    }
</table>

<div class="overlay">
    <div class="add">
        <form asp-action="CreateQuizzes" asp-controller="Database" method="post">
            <label style="width: 500px; height: 24px;" for="Id">Mã đề thi</label>
            <br />
            <input type="text" name="Id" required />
            <br />
            <label style="width: 500px; height: 24px;" for="StartTime">Ngày bắt đầu</label>
            <br />
            <input type="date" name="StartTime" required />
            <br />
            <label style="width: 500px; height: 24px;" for="EndTime">Ngày kết thúc</label>
            <br />
            <input type="date" name="EndTime" required />
            <br />
            <label style="width: 500px; height: 24px;" for="TimeLimit">Thời gian</label>
            <br />
            <input type="number" name="TimeLimit" required />
            <br />
            <label style="width: 500px; height: 24px;" for="Questions">Số câu hỏi</label>
            <br />
            <input type="number" name="Questions" required />
            <br />
            <button type="submit" style="background-color:deepskyblue;position:fixed;">Thêm</button>
        </form>
        <button id="back">Trở về</button>
    </div>
</div>

<style>
    button {
        padding: 10px;
        margin: 10px 10px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .buttons {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .add {
        display: flex;
        flex-direction: column;
        width: 600px;
        background-color: rgb(255, 255, 255);
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2); /* Bóng mờ */
        margin-top: 30px;
        margin-bottom: 30px;
        align-items: center;
        justify-content: center;
        text-align: left;
    }

    .overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.2);
        z-index: 1000;
        align-items: center;
        justify-content: center;
    }

    input, select {
        height: 36px;
        width: 500px;
    }

    table {
        border: 1px solid;
        transform: translateX(20vw);
        text-align: left;
    }

    th {
        background-color: black;
        color: white;
    }

    tr {
        height: 20px;
    }

    td {
        width: auto;
    }
</style>

<script>
    document.getElementById('create').addEventListener('click', function () {
        document.querySelector('.overlay').style.display = 'flex';
    });

    document.getElementById('back').addEventListener('click', function () {
        document.querySelector('.overlay').style.display = 'none';
    });
</script>