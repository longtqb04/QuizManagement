@{
    Layout = "~/Views/Shared/_MainPageLecturer.cshtml";
}

<div class="hello">
    <br />
    <h1 style="text-align:center;">Quản lý điểm</h1>
    <br />
</div>

<div class="buttons">
    <button style="background-color: black;color:white;">Tìm kiếm</button>
    <button style="background-color: deepskyblue;" onclick="location.href='@Url.Action("MainPageLecturer", "Home")'">Trở về trang chủ</button>
</div>

@model IEnumerable<QuizManagement.Models.Scores>
<table>
    <tr>
        <th>Student ID</th>
        <th>Quiz ID</th>
        <th>Questions</th>
        <th>Correct Answers</th>
        <th>Score</th>
    </tr>
    @foreach (var scores in Model ?? new List<QuizManagement.Models.Scores>())
    {
        <tr>
            <td>@scores.StudentID</td>
            <td>@scores.QuizID</td>
            <td>@scores.Questions</td>
            <td>@scores.Correct</td>
            <td>@scores.Score</td>
        </tr>
    }
</table>

<style>
    button {
        padding: 10px;
        margin: 10px 10px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .buttons {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    table {
        border: 1px solid;
    }
</style>