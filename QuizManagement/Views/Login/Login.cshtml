@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hello">
    <section class="banner-slider">
        <ul id="adaptive">
            <li><img src="~/Image/slbktv.jpg" width="1500" height="690"></li>
        </ul>
    </section>
</div>


<div class="overlay">
    <div class="box">
        <img src="~/Image/hcmut.png" alt="logo" style="width:100px;height:100px;">

        <h2>Select an Option</h2>
        <form asp-controller="Home" asp-action="Login" method="post">
            <button type="submit">Student</button>
        </form>
        <form asp-controller="Home" asp-action="LoginLecturer" method="post">
            <button type="submit">Lecturer</button>
        </form>
        <form asp-controller="Home" asp-action="LoginAdmin" method="post">
            <button type="submit">Admin</button>
        </form>
        <div class="text-center btn mt-4 b1" style="background-color: #121C57; color: white">
            <a asp-action="Index" asp-controller="Home" class="text-decoration-none text-white">Exit</a>
        </div>
    </div>
</div>

<style>
    .box {
        position: relative;
        background-color: white;
        padding: 80px;
        border-radius: 8px;
        width: auto;
        text-align: center;
    }

        .box button {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            font-size: 16px;
            color: white;
            background-color: #121C57;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .box button:hover {
                background-color: orange;
                color: black;
                font-weight: bold;
            }

    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .card {
        z-index: 1001;
    }

    .b1:hover {
        background-color: red !important;
        font-weight: bold;
        color: black !important;
    }

</style>